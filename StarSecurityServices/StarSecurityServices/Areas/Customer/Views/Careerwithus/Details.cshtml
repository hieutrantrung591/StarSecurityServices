@model StarSecurityServices.Models.Vacancy

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}

@section Styles {
    <!-- Custom css -->
    <link rel="stylesheet" href="~/css/Client/Pages/Career.css" />
}

<div class="breadcrumb-area job-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h1>JOB DETAILS</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container job-area">
    <div>
        <div class="job-title">
            <span class="h2">@Html.DisplayFor(model => model.Job.Name), @Html.DisplayFor(model => model.Department.Name)</span>
            <span class="badge badge-success">@Html.DisplayFor(model => model.Status)</span>
        </div>
        <p class="job-branch">@Html.DisplayFor(model => model.Branch.Address)</p>
    </div>

    <hr />

    <div class="job-description">
        @Html.Raw(Model.Description)
    </div>
    
    <form>
        <button class="btn btn-primary btn-big" asp-area="Customer" asp-controller="Contact" asp-action="Index">Contact us to apply</button>
    </form>
</div>