@model StarSecurityServices.Areas.Customer.ViewModels.ServiceDivisionViewModel

@{ ViewData["Title"] = "Service";
                Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml"; }

@section Styles {
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="@Url.Content("~/css/Client/Pages/Service.css")" >
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h1>OUR BUSINESS</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="service-section pt-5">
    <div class="container">
        @foreach (var division in Model.Divisions)
        {
            <div class="card shadow">
                <div class="card-body">
                    <div class="division-title">@division.Name</div>
                    <div class="service-list">
                        @foreach (var item in Model.Services)
                        {
                            @if (item.DivisionId == division.Id)
                            {
                                <ul>
                                    <li>
                                        <div class="service-name">
                                            <i class="fa fa-angle-double-right"></i>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                </div>
            </div>
         }
    </div>
</div>

<div class="container service-img">
    <div class="image">
        <img src="~/images/Client/Service/service-1.jpg" />
    </div>
    <div class="image">
        <img src="~/images/Client/Service/service-2.jpg" />
    </div>
    <div class="image">
        <img src="~/images/Client/Service/service-3.jpg" />
    </div>
</div>
