@using System.Globalization
@model StarSecurityServices.Models.Vacancy

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutVacancy.cshtml";
}

<div class="col-lg-12">
    <h2>Details of Vacancy</h2>
    <hr />
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Number)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Number)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Branch)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Branch.Address)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Department)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Department.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Job)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Job.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>
                    <dd class="col-sm-10">
                        @{var createdDate = Model.CreatedOn.ToLocalTime()
                                        .ToString(
                                        CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern
                                        + " "
                                        + CultureInfo.CurrentUICulture.DateTimeFormat.LongTimePattern);
                        }
                        @Html.DisplayFor(model => createdDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdatedOn)
                    </dt>
                    <dd class="col-sm-10">
                        @{var updatedDate = Model.UpdatedOn.ToLocalTime()
                                          .ToString(
                                          CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern
                                          + " "
                                          + CultureInfo.CurrentUICulture.DateTimeFormat.LongTimePattern);
                        }
                        @Html.DisplayFor(model => updatedDate)
                    </dd>
                </dl>
            </div>
            <form>
                <button class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</button>
                <button class="btn btn-dark" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>
