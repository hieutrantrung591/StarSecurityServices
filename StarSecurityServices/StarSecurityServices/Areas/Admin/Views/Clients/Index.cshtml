@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<StarSecurityServices.Models.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutClient.cshtml";
}

@section Styles {
    <!-- include libraries(jQuery, bootstrap) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- custom css -->
    <link rel="stylesheet" href="~/css/Admin/style.css" />
}

<div class="col-lg-12">
    <h1 class="admin-title">Clients</h1>
</div>

<div class="col-lg-12">
    <form>
        <button class="btn btn-success btn-fw float-right mb-2" asp-action="Create">
            <i class="mdi mdi-plus"></i>
            <span>Create New</span>
        </button>
    </form>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Contact)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Employee)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{int RowNo = 0;}
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @{RowNo++;} @RowNo
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Name)
                                </td>
                                <td>
                                    <div class="d-flex flex-row action-list">
                                        <form>
                                            <button class="btn btn-warning p-2" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                                            <button class="btn btn-info p-2" asp-action="Details" asp-route-id="@item.Id">Details</button>
                                            <button class="btn btn-danger p-2" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="mt-3" aria-label="Page Navigation">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="Clients" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
}