@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<StarSecurityServices.Models.Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutRole.cshtml";
}

<div class="col-lg-12">
    <h2 class="admin-title">Roles</h2>
</div>

<div class="col-lg-12">
    <form>
        <button class="btn btn-success btn-fw float-right mb-2" asp-action="Create">
            <i class="mdi mdi-plus"></i>
            <span>Create New</span>
        </button>
    </form>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>
                            Name
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{int RowNo = 0;}
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @{RowNo++;} @RowNo
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <div class="d-flex flex-row action-list">
                                        <form>
                                            <button class="btn btn-warning p-2" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                                            <button class="btn btn-info p-2" asp-action="Details" asp-route-id="@item.Id">Details</button>
                                            <button class="btn btn-danger p-2" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="mt-3" aria-label="Page Navigation">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="Roles" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>