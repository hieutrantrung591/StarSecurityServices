@model StarSecurityServices.Models.ClientService

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutClientService.cshtml";
}

<div class="col-lg-12">
    <h1>Create New Client's Service</h1>
    <hr />
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ClientId" class="control-label"></label> <span class="text-danger">*</span>
                            <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ServiceId" class="control-label"></label> <span class="text-danger">*</span>
                            <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <button class="btn btn-dark" asp-action="Index">Back to List</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

