@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<StarSecurityServices.Models.Vacancy>

@{
    ViewData["Title"] = "Careers with Us";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}

@section Styles {
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- Custom css -->
    <link rel="stylesheet" href="@Url.Content("~/css/Client/Pages/Career.css")" />
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h1>CAREERS WITH US</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container career-area">
    <div class="row">
        <div class="col-md-3">
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        Search Job Title: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    </p>
                    <div class="pt-2">
                        <input type="submit" value="Search" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-dark text-white">Back to Full List</a>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-9">
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="card job-list-item">
                        <div class="card-body">
                            <div class="card-title">
                                <div class="job-title">
                                    <span class="h4">@Html.DisplayFor(modelItem => item.Job.Name), @Html.DisplayFor(modelItem => item.Department.Name)</span>
                                    <span class="badge badge-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                </div>
                            </div>
                            <div class="card-text">
                                <i class="fas fa-map-marker-alt"></i>
                                @Html.DisplayFor(modelItem => item.Branch.Address)
                            </div>
                        </div>
                        <div class="card-footer">
                            <form>
                                <button class="btn btn-primary button" asp-controller="Careerwithus" asp-action="Details" asp-route-id="@item.Id">Details</button>
                            </form>
                        </div>
                    </div>
                }
            }

            <div class="mt-3" aria-label="Page Navigation">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="Branches" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
    <hr />
    <div class="row pt-5">
        <div class="col-md-7">
            <div class="career-benefits">
                <h4>Find Your Dream Careers</h4>
                <p>At Star, we believe that human resource is the most valuable asset of the company. We possess an excellent blend of professionals from diverse backgrounds including senior managers from industry as well as ex-police and armed forces. With the average age of Star’s managers 35 years makes the company’s environment dynamic and motivated.</p>
                <p>
                    Being a rapidly growing enterprise, Star is always looking for professionally qualified and energetic individuals with the caliber to grow and excel. The Company offers a large number of employment opportunities in its management team for a variety of people ranging from fresh graduates to experienced professionals from industry and the uniformed services. Star provides excellent growth opportunities for a lifelong career. Many officers from this permanent cadre are in senior management positions today.
                </p>
            </div>
        </div>
        <div class="col-md-5">
            <div class="job-img">
                <img src="~/images/Client/About/employee-benefits-strategy.jpg" style="max-width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</div>